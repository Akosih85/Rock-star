script(type='text/x-template')#slider-container
  .slider
    .slider__header
      .section__title.slider__title Что обо мне говорят
      .slider__btns
        button(type='button' @click='slide("prev")').round-btn.round-btn_pointer_left
          +icon('short-arrow', 'round-btn-icon')
        button(type='button' @click='slide("next")').round-btn.round-btn_pointer_right
          +icon('short-arrow', 'round-btn-icon')
    swiper(ref='slider' :options='sliderOptions')
      swiper-slide(v-for='review in reviews' :key='review.id')
        .quote
          .quote__text
            p {{review.text}}
          .quote__user
            .user-display
              .user-display__avatar
                .user-display__avatar-style
                  img(:src="review.pic").user-display__pic
              .user-display__data
                .user-display__name {{review.name}}
                .user-display__occ {{review.occ}}