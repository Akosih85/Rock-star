.square-btns {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #333c49;
}

.square-btns__icon {
  width: 17px;
  height: 17px;
  fill: #717883;

  @include phones {
    width: 30px;
    height: 30px;
  }
}

.square-btns__item {
  height: 50%;
  padding: 0;

  &:hover .square-btns__icon {
    fill: #fff;
  }
}

.square-btns__item_prev .square-btns__icon {
  transform: rotate(180deg);
}

.active .square-btns__icon {
  fill: #fff;
}