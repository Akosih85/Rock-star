.reviews {
  background: url('~images/decor/guitar-man.jpg') center top / cover no-repeat, #100022;

  @include tablets {
    background-position: left 60% top;
  }
}

.reviews__container {
  width: 85%;
  height: 100vh;
  display: flex;
  flex-direction: column;

  @include desktop {
    width: 90.7%;
  }

  @include tablets {
    width: 90%;
  }

  @include phones {
    width: 85%;
    height: 100vh;
  }
}